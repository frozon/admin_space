<html>
  <head>
  </head>
  <body>
    <div id="menu">
      <ul>
        <% Dir.glob( 'app/models/*' ).each do |model| %>
          <% model_name = File.basename(model).gsub( /^(.+).rb/, '\1').pluralize %>
          <li><%= link_to model_name, [:admin, model_name] %></li>
        <% end %>
      </ul>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>